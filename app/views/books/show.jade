extends ../shared/template

block content
  .row
    .col-xs-6.col-md-3
      .book
        a(href=book.data[0], target='_blank')
          .cover(style="background-image:url('" + book.cover[0] + "');")
    .col-xs-6.col-md-9
      h1: small Main
      ul
        li: a(href='/books/') All Books
        li: a(href='/books/admin') Book Administration
        li: a(href='/books/' + book._id + '/edit') Edit Book
        li: a(href='/books/' + book._id + '/shelf') Toggle Bookshelf
      h1: small Tags
      ul
        each tag in book.tags
          li: a(href='/books/query?tags=' + tag)= tag
