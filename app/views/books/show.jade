extends ../shared/template

block content
  .book
    a(href=book.data[0])
      .cover(style="background-image:url('" + book.cover[0] + "');")
    .back
      a.btn.btn-success.btn-xs.btn-block(href='/books/') Back
    .edit
      a.btn.btn-warning.btn-xs.btn-block(href='/books/' + book._id + '/edit') Edit
    .mark
      a.btn.btn-primary.btn-xs.btn-block(href='/books/' + book._id + '/mark') Mark
    .tags
      each tag in book.tags
        a.btn.btn-info.btn-xs(href='/books/query?tags=' + tag)= tag
